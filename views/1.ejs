    <script>
        async function fetchData() {
            try {
                const response = await fetch('./budget.json');
                if (!response.ok) throw new Error('Network response was not ok');
                const data = await response.json();
                renderContent(data);
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }

        function renderContent(data) {
            document.querySelector('.budgeting-content').innerHTML = `
                <h1>${data.pageMeta.title}</h1>
                <p>${data.pageMeta.description}</p>
            `;
            document.querySelector('.expense-section').innerHTML = `
                <h2>${data.expenseTracking.title}</h2>
                <p>${data.expenseTracking.description}</p>
                <div class="card-container">
                    ${data.expenseTracking.cards.map(card => `
                        <div class="card">
                            <img src="${card.image}" alt="${card.altText}">
                            <h3>${card.title}</h3>
                            <p>${card.description}</p>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        async function fetchTestimonials() {
            try {
                const response = await fetch('./hearfrom.json');
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const data = await response.json();
                renderTestimonialContent(data);
            } catch (error) {
                console.error('Error fetching testimonials:', error);
            }
        }

        function renderTestimonialContent(data) {
            const testimonialsSection = document.querySelector('.testimonials');

            const content = `
                <h1>${data.sectionTitle}</h1>
                <p>${data.sectionDescription}</p>

                <div class="testimonials-container">
                    ${data.testimonials.map(testimonial => `
                        <div class="testimonial">
                            <img src="${testimonial.image}" alt="${testimonial.name}">
                            <h3>${testimonial.name}</h3>
                            <p>"${testimonial.testimonial}"</p>
                        </div>
                    `).join('')}
                </div>
            `;

            testimonialsSection.innerHTML = content;
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchData();
            fetchTestimonials();
        });
    </script>
